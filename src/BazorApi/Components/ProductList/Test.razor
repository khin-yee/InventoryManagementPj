@page "/AddProduct"
@using BlazorApi.Repository.Domain

<form Method="post" enctype="multipart/form-data" model="product">
    <div class="containerzv2 pt-19">
        <div class="row mb-3">
            <div class="d-flex align-items-center">
                <h1 class="me-2">Create</h1>
                <h1 class="">Product</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-6 w-label">
                        <label class="col-form-label label-txt-style required fw-bolder fs-6">Product Code</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" required class="form-control input-box " placeholder="Enter Product Code" asp-for="Name" id="txtName">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 w-label">
                        <label class="col-form-label label-txt-style required fw-bolder fs-6">Product Name</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" required class="form-control input-box " placeholder="Enter Product Name" asp-for="Name" id="txtName">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 w-label">
                        <label class="col-form-label label-txt-style required fw-bolder fs-6">Description</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" required class="form-control input-box " placeholder="Enter Description" asp-for="Name" id="txtName">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 w-label">
                        <label class="col-form-label label-txt-style required fw-bolder fs-6">Start Date</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" required class="form-control input-box " placeholder="Enter Start Date" asp-for="Name" id="txtName">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 w-label">
                        <label class="col-form-label label-txt-style required fw-bolder fs-6">End Date</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" required class="form-control input-box " placeholder="Enter End Date" asp-for="Name" id="txtName">
                    </div>
                </div>
                <div class="row txt-input-group mt-3">
                    <div class="col-lg-12">
                        <div class="d-flex ">
                            <NavLink class="btn btn-outline-dark me-2" href="/ProductList">Cancel</NavLink>
                            <button type="submit" class="btn btn-dark" onClick="AddProduct()">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


