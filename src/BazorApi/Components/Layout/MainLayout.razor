@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
          <AuthorizeView>
              <NotAuthorized>
                <a href="/login">Login</a>
              </NotAuthorized>
              <Authorized>
                  <a href="/logout">Logout</a>
              </Authorized>
          </AuthorizeView>
        </div>
          
        <article class="content px-4">
            @Body
        </article>
                    @* Required *@
            <MudThemeProvider />
            <MudPopoverProvider />

            @* Needed for dialogs *@
            <MudDialogProvider />

            @* Needed for snackbars *@
            <MudSnackbarProvider />
    </main>
</div>
